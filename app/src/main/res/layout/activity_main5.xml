<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"

    tools:context="com.example.user.project.MainActivity"
    android:background="@drawable/ade">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:background="@drawable/plus"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/b2"
        android:background="@drawable/refr"

        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/b4"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:background="@drawable/untitled"

        android:layout_marginTop="63dp"
        android:layout_below="@+id/b2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:id="@+id/b5"
        android:background="@drawable/inf"
        android:layout_below="@+id/b4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="info"

        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Нажатием переносите то, что хотите преобрести в список покупок"
        android:id="@+id/textView"
        android:textColor="#6c6a6a"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_alignBottom="@+id/b2"
        android:layout_toLeftOf="@+id/b2"
        android:layout_toStartOf="@+id/b2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Смотрите на ваш список покупок и удаляйте нажатием безполезные элементы"
        android:id="@+id/textView1"
        android:textColor="#6c6a6a"
        android:layout_alignTop="@+id/b4"
        android:layout_toRightOf="@+id/b4"
        android:layout_toEndOf="@+id/b4"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Добавьте новый продукт"
        android:id="@+id/textView2"
        android:layout_marginTop="21dp"
        android:textColor="#6c6a6a"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/b2"
        android:layout_alignEnd="@+id/b2" />


</RelativeLayout>